
<body>
    <div class="layout-wrapper layout-content-navbar">
        <div class="layout-container">
            <%- include('../../../partials/sideBar') %>
            <div class="layout-page">
                <%- include('../../../partials/header') %>
                <div class="content-wrapper">
                    <div class="admin-container">
                        <div class="admin-header">
                             <h2>Amenity</h2>
                            <% if(adminPerms.includes('amenity-create')) { %>
                                <a href="/amenity/add" class="btn btn-gradient">Add New</a>
                            <% } %>
                        </div>

                        <div class="row g-4 mb-4">
                            <div class="col-md-12 col-lg-12">
                                <div class="stats-card">
                                    <div class="card-body">
                                        <div class="">
                                            <table class="table table-striped table-hover" id="amenitysTable">
                                                <thead>
                                                    <tr>
                                                        <th>#</th>
                                                        <th>Name</th>
                                                        <th>Category</th>
                                                        <th>Icon</th>
                                                        <th>Status</th>
                                                        <th>Created</th>
                                                        <th>Actions</th>
                                                    </tr>
                                                </thead>
                                                <tbody>
                                                    <% if(amenitys.length > 0){ %>
                                                          <% amenitys.forEach((amenity, index) => { %>
                                                            <tr>
                                                                <td><%= index + 1 %></td>
                                                                <td><%= amenity.name %></td>
                                                                <td><%= amenity.category %></td>
                                                                <td>
                                                                    <% if (amenity.icon) { %>
                                                                        <a href="<%= amenity.icon %>" target="_blank">
                                                                            <img src="<%= amenity.icon %>" alt="<%= amenity.name %>" style="max-height: 50px;">
                                                                        </a>
                                                                    <% } else { %>
                                                                        <span class="text-muted">No Icon</span>
                                                                    <% } %>
                                                                </td>
                                                                <td>
                                                                    <% if(adminPerms.includes('amenity-status')) { %>
                                                                        <div class="form-check form-switch">
                                                                            <input class="form-check-input status-toggle" 
                                                                                type="checkbox" 
                                                                                data-id="<%= amenity._id %>"
                                                                                <%= amenity.status ? 'checked' : '' %>>
                                                                        </div>
                                                                    <% } %>
                                                                </td>
                                                                <td> 
                                                                    <%= formatDate(amenity.createdAt) %>
                                                                </td>
                                                                <td>
                                                                    <% if(adminPerms.includes('amenity-edit')) { %>
                                                                        <a href="/amenity/<%= amenity._id %>/edit" class="btn btn-sm btn-icon btn-outline-primary">
                                                                            <i class="bx bx-edit"></i>
                                                                        </a>
                                                                    <% } %>
                                                                </td>
                                                            </tr>
                                                        <% }); %>
                                                    <% }; %>
                                                </tbody>
                                            </table>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>

                  <%- include('../../../partials/footer') %>
                  <div class="content-backdrop fade"></div>
                </div>
            </div>
        </div>
        <div class="layout-overlay layout-menu-toggle"></div>
    </div> 

<script>
    $(document).ready(function() {
        $('#amenitysTable').DataTable();
        
        $('.status-toggle').change(function() {
            const amenityId = $(this).data('id');
            const isChecked = $(this).is(':checked');
            
            $.ajax({
                url: `/amenity/${amenityId}/status`,
                type: 'PUT',
                data: { status: isChecked },
                success: function(response) {
                    if (response.success) {
                        Swal.fire({
                            icon: 'success',
                            title: 'Success!',
                            text: response.message,
                            timer: 1500,
                            showConfirmButton: false
                        });
                    } else {
                        Swal.fire({
                            icon: 'error',
                            title: 'Error!',
                            text: response.message
                        });
                        // Revert the toggle if failed
                        $(this).prop('checked', !isChecked);
                    }
                },
                error: function(xhr) {
                    Swal.fire({
                        icon: 'error',
                        title: 'Error!',
                        text: xhr.responseJSON?.message || 'Failed to update status'
                    });
                    // Revert the toggle on error
                    $(this).prop('checked', !isChecked);
                }
            });
        });
    });
</script>

</body>

