<!-- Uber Booking - Admin List -->
<body>
  <div class="layout-wrapper layout-content-navbar">
    <div class="layout-container">
      <%- include('../../../partials/sideBar') %>
      <div class="layout-page">
        <%- include('../../../partials/header') %>
        <div class="content-wrapper">
          <div class="admin-container">
            <div class="admin-header d-flex justify-content-between align-items-center">
              <h2>Uber Bookings</h2>
              <form class="d-flex" method="get" action="/uber-booking">
                <input type="text" name="q" value="<%= filters?.q || '' %>" class="form-control me-2" placeholder="Search by ID, product, address" />
                <select name="guestId" class="form-select me-2" style="min-width: 220px">
                  <option value="">All Guests</option>
                  <% (guestOptions || []).forEach(g => { %>
                    <option value="<%= g._id %>" <%= (filters?.guestId == g._id) ? 'selected' : '' %>><%= g.firstName %> <%= g.lastName %> (<%= g.count %>)</option>
                  <% }) %>
                </select>
                <select name="status" class="form-select me-2" style="min-width: 160px">
                  <option value="">All Status</option>
                  <% ['processing','accepted','arriving','in_progress','completed','cancelled','no_drivers_available','driver_cancelled','rider_cancelled'].forEach(s => { %>
                    <option value="<%= s %>" <%= (filters?.status === s) ? 'selected' : '' %>><%= s %></option>
                  <% }) %>
                </select>
                <button class="btn btn-primary" type="submit">Filter</button>
              </form>
            </div>

            <div class="row g-4 mt-2">
              <% if ((bookings || []).length === 0) { %>
                <div class="col-12">
                  <div class="alert alert-info">No Uber bookings found.</div>
                </div>
              <% } %>

              <% (bookings || []).forEach((b) => { %>
              <div class="col-md-6 col-lg-4">
                <div class="card h-100">
                  <div class="card-body">
                    <div class="d-flex justify-content-between align-items-start">
                      <div>
                        <h5 class="card-title mb-1">#<%= b.bookingId %></h5>
                        <span class="badge bg-secondary text-uppercase"><%= b.status %></span>
                      </div>
                    </div>
                    <div class="mt-2 d-flex align-items-center justify-content-between">
                      <div class="small text-muted">Guest</div>
                      <div>
                        <% if (b?.guestId?._id) { %>
                          <a href="/guest/<%= b.guestId._id %>/show" class="text-decoration-none">
                            <i class="bx bx-user me-1"></i>
                            <%= b.guestId.firstName %> <%= b.guestId.lastName %>
                          </a>
                        <% } else { %>
                          <span class="text-muted">-</span>
                        <% } %>
                      </div>
                    </div>

                    <div class="mt-3">
                      <div class="small text-muted">Product</div>
                      <div><%= b?.rideDetails?.productName || b.uberProductId %></div>
                    </div>
                    <div class="mt-2">
                      <div class="small text-muted">Pickup</div>
                      <div><%= b?.pickupLocation?.address %></div>
                    </div>
                    <div class="mt-2">
                      <div class="small text-muted">Dropoff</div>
                      <div><%= b?.dropoffLocation?.address %></div>
                    </div>
                    <div class="mt-3 d-flex justify-content-between align-items-center">
                      <a href="/uber-booking/<%= b._id %>/show" class="btn btn-outline-primary btn-sm">View Details</a>
                      <div class="text-muted small text-end">
                        <div>Requested</div>
                        <div><%= new Date(b.createdAt).toLocaleString('en-IN') %></div>
                      </div>
                    </div>
                  </div>
                </div>
              </div>
              <% }) %>
            </div>

            <nav aria-label="Pagination" class="mt-4">
              <ul class="pagination justify-content-center">
                <% if (pagination?.totalPages > 1) { %>
                  <% const curr = pagination.currentPage; const total = pagination.totalPages; %>
                  <li class="page-item <%= curr === 1 ? 'disabled' : '' %>">
                    <a class="page-link" href="?page=<%= curr - 1 %>&limit=<%= pagination.itemsPerPage %>&status=<%= filters?.status || '' %>&liked=<%= filters?.liked || '' %>&guestId=<%= filters?.guestId || '' %>&q=<%= filters?.q || '' %>">Previous</a>
                  </li>
                  <% for (let i = 1; i <= total; i++) { %>
                    <li class="page-item <%= i === curr ? 'active' : '' %>">
                      <a class="page-link" href="?page=<%= i %>&limit=<%= pagination.itemsPerPage %>&status=<%= filters?.status || '' %>&liked=<%= filters?.liked || '' %>&guestId=<%= filters?.guestId || '' %>&q=<%= filters?.q || '' %>"><%= i %></a>
                    </li>
                  <% } %>
                  <li class="page-item <%= curr === total ? 'disabled' : '' %>">
                    <a class="page-link" href="?page=<%= curr + 1 %>&limit=<%= pagination.itemsPerPage %>&status=<%= filters?.status || '' %>&liked=<%= filters?.liked || '' %>&guestId=<%= filters?.guestId || '' %>&q=<%= filters?.q || '' %>">Next</a>
                  </li>
                <% } %>
              </ul>
            </nav>
          </div>

          <%- include('../../../partials/footer') %>
          <div class="content-backdrop fade"></div>
        </div>
      </div>
    </div>
    <div class="layout-overlay layout-menu-toggle"></div>
  </div>

</body>

