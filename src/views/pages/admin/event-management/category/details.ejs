
<body>
    <div class="layout-wrapper layout-content-navbar">
        <div class="layout-container">
            <%- include('../../../../partials/sideBar') %>
            <div class="layout-page">
                <%- include('../../../../partials/header') %>
                <div class="content-wrapper">
                    <div class="admin-container">
                        <div class="admin-header">
                          <h2>Event Category Details</h2>
                            <a href="/event/category" class="btn btn-gradient">Back</a>
                        </div>

                        <div class="row g-4 mb-4">
                            <div class="col-md-12 col-lg-12">
                                <div class="stats-card">
                                    <div class="card-body">
                                         <div class="row">
                                            <div class="col-md-8">
                                                <table class="table table-bordered">
                                                    <tr>
                                                        <th width="30%">Name</th>
                                                        <td><%= eventCategory.name %></td>
                                                    </tr>
                                                    <tr>
                                                        <th>Description</th>
                                                        <td><%= eventCategory.description || 'N/A' %></td>
                                                    </tr>
                                                    <tr>
                                                        <th>Status</th>
                                                        <td>
                                                            <span class="badge bg-<%= eventCategory.status ? 'success' : 'danger' %>">
                                                                <%= eventCategory.status ? 'Active' : 'Inactive' %>
                                                            </span>
                                                        </td>
                                                    </tr>
                                                    <tr>
                                                        <th>Created At</th>
                                                        <td><%= formatDate(eventCategory.createdAt) %></td>
                                                    </tr>
                                                </table>
                                            </div>
                                            <div class="col-md-4">
                                                <% if (eventCategory.image) { %>
                                                    <div class="text-center">
                                                        <img src="<%= eventCategory.image %>" 
                                                            alt="<%= eventCategory.name %>" 
                                                            class="img-fluid rounded"
                                                            style="max-height: 300px;">
                                                        <div class="mt-3">
                                                            <a href="<%= eventCategory.image %>" 
                                                            target="_blank" 
                                                            class="btn btn-sm btn-sm-gradient">
                                                                View Full Image
                                                            </a>
                                                        </div>
                                                    </div>
                                                <% } else { %>
                                                    <div class="text-center py-5 bg-light rounded">
                                                        <i class="fas fa-image fa-3x text-muted"></i>
                                                        <p class="mt-2">No Image Available</p>
                                                    </div>
                                                <% } %>
                                            </div>
                                        </div>
                                    </div>
                                </div>

                            </div>
                        </div>
                    </div>

                  <%- include('../../../../partials/footer') %>
                  <div class="content-backdrop fade"></div>
                </div>
            </div>
        </div>
        <div class="layout-overlay layout-menu-toggle"></div>
    </div> 


</body>

