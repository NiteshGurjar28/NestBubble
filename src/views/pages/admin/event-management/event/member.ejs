<body>
    <style>
        .booking-details-container {
            font-family: 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif;
        }

        .booking-header {
            padding-bottom: 15px;
        }

        .card {
            border-radius: 8px;
            overflow: hidden;
        }

        .card-header {
            font-weight: 600;
        }

        .timeline {
            position: relative;
            padding-left: 20px;
        }

        .timeline-item {
            position: relative;
            padding-bottom: 15px;
        }

        .timeline-point {
            position: absolute;
            left: -20px;
            top: 5px;
            width: 12px;
            height: 12px;
            border-radius: 50%;
            background-color: #696cff;
        }

        .timeline-content {
            padding-left: 10px;
        }

        .payment-summary {
            background-color: #f8f9fa;
            padding: 15px;
            border-radius: 6px;
        }

        .badge {
            font-weight: 500;
            padding: 6px 10px;
            border-radius: 4px;
        }
    </style>
    <div class="layout-wrapper layout-content-navbar">
        <div class="layout-container">
            <%- include('../../../../partials/sideBar') %>
            <div class="layout-page">
                <%- include('../../../../partials/header') %>
                <div class="content-wrapper">
                    <div class="admin-container">
                        <div class="admin-header">
                            <h2>Event Members</h2>
                            <a href="/event/<%= event._id %>/show" class="btn btn-gradient">
                                <i class="fas fa-arrow-left mr-2"></i> Back
                            </a>
                        </div>

                        <% if(adminPerms.includes('event-payment-summary')) { %>
                                <div class="card mb-4">
                                    <div class="card-body">
                                        <div class="row">
                                            <!-- Event Info Column -->
                                            <div class="col-md-3 border-end">
                                                <h5 class="card-title text-truncate"><%= event.title %></h5>
                                                <p class="text-muted mb-2">
                                                    <i class="fas fa-calendar-alt text-primary me-2"></i>
                                                    <span>
                                                        <%=  formatDate(event.startDate, { format: 'full' }) %> -  <%=  formatDate(event.endDate, { format: 'full' }) %>
                                                    </span>
                                                </p>
                                                <p>
                                                    <i class="fas fa-clock text-primary me-2"></i>
                                                    <span>
                                                        <% function formatTime(timeString) {
                                                                if (!timeString) return '';
                                                                
                                                                // Split into hours and minutes
                                                                const [hours, minutes] = timeString.split(':');
                                                                const hourNum = parseInt(hours);
                                                                
                                                                // Convert to 12-hour format
                                                                const period = hourNum >= 12 ? 'PM' : 'AM';
                                                                const displayHour = hourNum % 12 || 12; // Convert 0 to 12
                                                                
                                                                return `${displayHour}:${minutes} ${period}`;
                                                            } %>
                                                        <%= formatTime(event.startTime) %> - <%= formatTime(event.endTime) %>
                                                    </span>
                                                </p>   
                                                <p class="mb-1">
                                                    <span class="badge bg-primary">
                                                        <%= event.categoryId?.name || 'N/A' %>
                                                    </span>
                                                </p>
                                            </div>
                                            
                                            <!-- Stats Column -->
                                            <div class="col-md-2 border-end">
                                                <div class="text-center">
                                                    <h6 class="mb-1">Bookings</h6>
                                                    <p class="h4 text-primary mb-0"><%= bookings.length %></p>
                                                </div>
                                                <div class="text-center mt-3">
                                                    <h6 class="mb-1">Attendees</h6>
                                                    <p class="h4 text-success mb-0"><%= event.currentAttendees %>/<%= event.maxParticipants %></p>
                                                </div>
                                            </div>
                                            
                                            <!-- Financials Column -->
                                            <div class="col-md-4 border-end">
                                                <div class="row">
                                                    <div class="col-6">
                                                        <h6 class="mb-1 text-muted">Organizer Payout</h6>
                                                        <p class="h5 mb-2">
                                                            <%= formatPrice(baseAmount || 0) %>
                                                        </p>
                                                    </div>
                                                    <div class="col-6">
                                                        <h6 class="mb-1 text-muted">Platform Fee</h6>
                                                        <p class="h5 text-info mb-2">
                                                              <%= formatPrice(taxAmount || 0) %>
                                                        </p>
                                                    </div>
                                                    <div class="col-6">
                                                        <h6 class="mb-1 text-muted">Refunds</h6>
                                                        <p class="h5 text-danger mb-0">
                                                             <%= formatPrice(refundAmount || 0) %>
                                                        </p>
                                                    </div>
                                                
                                                </div>
                                            </div>
                                            
                                            <!-- Earnings Column -->
                                            <div class="col-md-3">
                                                <div class="text-center">
                                                    <h6 class="mb-1 text-muted">Total Revenue</h6>
                                                    <p class="h3 text-success mb-2">
                                                        <%= formatPrice(totalAmount || 0) %>
                                                    </p>
                                                </div>
                                                <div class="text-center">
                                                    <h6 class="mb-1 text-muted">Organizer</h6>
                                                    <p class="mb-0 text-truncate small">
                                                        <i class="fas fa-user text-secondary me-1"></i>
                                                        <%= event.createdBy?.userId?.firstName %> <%= event.createdBy?.userId?.lastName %>
                                                    </p>
                                                    <p class="text-muted small mb-0">
                                                        <i class="fas fa-envelope text-secondary me-1"></i>
                                                        <%= event.createdBy?.userId?.email %>
                                                    </p>
                                                </div>
                                            </div>
                                        </div>
                                        

                                        <!-- Progress Bar for Payment Status (Optional) -->
                                        
                                        <div class="mt-3">
                                            <div class="d-flex justify-content-between mb-1">
                                                <span>Payment Status</span>
                                                <span>
                                                    <% 
                                                    const completed = bookings.filter(b => b.paymentDetails?.status === 'paid').length;
                                                    const refunded = bookings.filter(b => b.paymentDetails?.status === 'refunded').length;
                                                    %>
                                                    <%= completed %> Paid / <%= refunded %> Refunded
                                                </span>
                                            </div>
                                            <div class="progress" style="height: 8px;">
                                                <div class="progress-bar bg-success" 
                                                    style="width: <%= (completed/bookings.length)*100 %>%" 
                                                    role="progressbar"></div>
                                                <div class="progress-bar bg-info" 
                                                    style="width: <%= (refunded/bookings.length)*100 %>%" 
                                                    role="progressbar"></div>
                                            </div>
                                        </div>
                                    
                                    </div>
                                </div>
                            <% } %>

                        <!-- Members Table -->
                        <% if(adminPerms.includes('event-booking-member-list')) { %>
                            <div class="card">
                                <div class="card-header d-flex justify-content-between align-items-center">
                                    <h5 class="mb-0 d-flex align-items-center gap-2">
                                        Booking List
                                         <% if(adminPerms.includes('event-booking')) { %>
                                            <% if(event.status == "upcoming" && event.createdBy.role == "admin") { %>
                                                <a href="#" class="btn btn-gradient" data-bs-toggle="modal" data-bs-target="#eventMemberModal"> 
                                                    Add Booking
                                                </a>
                                            <% } %>
                                        <% } %>
                                    </h5>
                                    <div class="d-flex">
                                        <input type="text" id="searchInput" class="form-control form-control-sm" placeholder="Search members..." style="width: 200px;">
                                    </div>
                                </div>
                                <div class="card-body">
                                    <div class="table-responsive">
                                        <table class="table table-hover" id="membersTable">
                                            <thead>
                                                <tr>
                                                    <th>Booking ID</th>
                                                    <th>Member</th>
                                                    <th>Attendees</th>
                                                    <th>Booking Date</th>
                                                    <th>Booking Status</th>
                                                    <th>Actions</th>
                                                </tr>
                                            </thead>
                                            <tbody>
                                                <% bookings.forEach(booking => { %>
                                                <tr>
                                                    <td><%= booking.bookingId %></td>
                                                    <td>
                                                        <div class="d-flex align-items-center">
                                                            <% if (booking.bookingBy.user.profileImage) { %>
                                                                <img src="<%= booking.bookingBy.user.profileImage %>" alt="Profile" class="rounded-circle me-2" width="32" height="32"  onerror="this.onerror=null;this.src='/temp/default-user.png'">
                                                            <% } %>
                                                            <div>
                                                                <% if(booking.bookingBy.role == 'admin'){ %>
                                                                        <h6 class="mb-0"><%= booking.bookingBy.user.firstName %> <%= booking.bookingBy.user.lastName %></h6>
                                                                        <small class="text-muted"><%= booking.bookingBy.user.email %></small>
                                                                <% } else { %>
                                                                    <a href="/guest/<%= booking.bookingBy.user._id %>/show">
                                                                        <h6 class="mb-0"><%= booking.bookingBy.user.firstName %> <%= booking.bookingBy.user.lastName %></h6>
                                                                        <small class="text-muted"><%= booking.bookingBy.user.email %></small>
                                                                    </a>
                                                                <% } %>
                                                            </div>
                                                        </div>
                                                    </td>
                                                    <td><%= booking.numberOfAttendees %></td>
                                                    <td><%=  formatDate(booking.bookingDate) %></td>
                                                    <td><%- helpers.bookingStatusBadge(booking.status) %></td>
                                                    <td>
                                                        <% if(adminPerms.includes('event-booking-details')) { %>
                                                            <a class="btn btn-sm btn-icon btn-outline-primary" href="#" data-bs-toggle="modal" data-bs-target="#viewBookingModal" data-booking-id="<%= booking._id %>" ><i class="bx bx-show"></i></a>
                                                        <% } %>
                                                    </td>
                                                </tr>
                                                <% }); %>
                                            </tbody>
                                        </table>
                                    </div>
                                </div>
                            </div>
                        <% } %>
                    </div>
        
                    <%- include('../../../../partials/footer') %>
                    <div class="content-backdrop fade"></div>
                </div>
            </div>
        </div>
        <div class="layout-overlay layout-menu-toggle"></div>
    </div>

    <!-- View Booking Modal -->
    <div class="modal fade" id="viewBookingModal" tabindex="-1" aria-hidden="true">
        <div class="modal-dialog modal-lg">
            <div class="modal-content">
                <div class="modal-header">
                    <h5 class="modal-title">Booking Details</h5>
                    <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
                </div>
                <div class="modal-body" id="bookingDetailsContent">
                    <!-- Content will be loaded via AJAX -->
                    <div class="text-center py-4">
                        <div class="spinner-border" role="status">
                            <span class="visually-hidden">Loading...</span> 
                        </div>
                    </div>
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Close</button>
                </div>
            </div>
        </div>
    </div>

    <!-- Modal Structure -->
    <div class="modal fade" id="eventMemberModal" tabindex="-1" aria-labelledby="eventMemberModalLabel" aria-hidden="true">
        <div class="modal-dialog modal-lg">
            <div class="modal-content">
                <div class="modal-header bg-gradient text-white">
                    <h5 class="modal-title" id="eventMemberModalLabel">Add New Booking</h5>
                    <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
                </div>
                <form id="bookingForm" action="/event/booking/admin" method="POST">
                    <input type="hidden" name="eventId" value="<%= event._id %>">
                    <input type="hidden" name="pricePerAttendee" id="pricePerAttendee" value="<%= event.price %>">
                    
                    <div class="modal-body">
                        <div class="mb-3">
                            <label class="form-label">Number of Attendees *</label>
                            <input type="number" name="numberOfAttendees" id="numberOfAttendees" class="form-control" min="1" value="1" required>
                        </div>
                        <div class="mb-3">
                            <label class="form-label">Price Per Attendee</label>
                            <input type="number" class="form-control" value="<%= event.price %>" disabled>
                        </div>
                        <!-- <div class="mb-3">
                            <label class="form-label">Total Amount</label>
                            <input type="number" name="totalAmount" id="totalAmount" class="form-control" value="<%= event.price %>" disabled>
                        </div> -->
                    </div>
                    
                    <div class="modal-footer">
                        <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cancel</button>
                        <button type="submit" class="btn btn-gradient">Confirm Booking</button>
                    </div>
                </form>
            </div>
        </div>
    </div>


 <script>
    // Search functionality
    $(document).ready(function() {
        $('#searchInput').on('keyup', function() {
            const value = $(this).val().toLowerCase();
            $('#membersTable tbody tr').filter(function() {
                $(this).toggle($(this).text().toLowerCase().indexOf(value) > -1);
            });
        });

        // View booking modal
        $('#viewBookingModal').on('show.bs.modal', function(event) {
            const button = $(event.relatedTarget);
            const bookingId = button.data('booking-id');
            const modal = $(this);
            
            $.get(`/event/booking/${bookingId}/details`, function(response) {
                const data = {
                    ...response.booking,
                    bookingDate: new Date(response.booking.bookingDate),
                    createdAt: new Date(response.booking.createdAt),
                    updatedAt: response.booking.updatedAt ? new Date(response.booking.updatedAt) : null
                };


                
                let reviewHtml = '';

                if(response.rating) {
                    const ratingDate =  formatDate(response.rating.createdAte);
                    
                    reviewHtml = `
                        <div class="col-md-12">
                            <div class="card border-0 shadow-sm h-100">
                                <div class="card-header bg-light">
                                    <h5 class="mb-0">Review & Rating</h5>
                                </div>
                                <div class="card-body">
                                    <div class="d-flex align-items-center mb-3 mt-3">
                                        <div class="star-rating small">
                                            ${Array.from({length: 5}, (_, i) => 
                                                `<i class="fas fa-star ${i < response.rating.rating ? 'text-warning' : 'text-secondary'}"></i>`
                                            ).join('')}
                                        </div>
                                        <span class="ms-2 fw-bold">${response.rating.rating}/5</span>
                                    </div>
                                    
                                    ${response.rating.review ? `
                                        <p class="mb-2">${response.rating.review}</p>
                                    ` : ''}
                                    
                                    <small class="text-muted">
                                        Reviewed on ${ratingDate}
                                    </small>
                                </div>
                            </div>
                        </div>
                    `;
                }
               

                const htmlData = `
                <div class="booking-details-container">
                    <!-- Booking Header -->
                    <div class="booking-header d-flex justify-content-between align-items-center mb-4 pb-3 border-bottom">
                        <div>
                            <h3 class="mb-1">Booking #${data.bookingId}</h3>
                            <p class="text-muted mb-0">
                                <i class="far fa-calendar-alt me-1"></i>
                                Booked on ${formatDate(data.bookingDate)}
                            </p>
                        </div>
                        <div>
                            <span class="badge bg-${data.status === 'confirmed' ? 'success' : 
                                           data.status === 'cancelled' ? 'danger' : 'warning'} me-2">
                                ${data.status.toUpperCase()}
                            </span>
                        </div>
                    </div>

                    <!-- Main Content -->
                    <div class="row">
                        <!-- Left Column - Booking Info -->
                        <div class="col-md-7">
                            <div class="card mb-4 border-0 shadow-sm">
                                <div class="card-header bg-light">
                                    <h5 class="mb-0">Payment Information</h5>
                                </div>
                                <div class="card-body">
                                    <div class="row">
                                        <div class="col-md-12">
                                            <p class="mb-2">
                                                <strong>Gateway :</strong> ${data?.transactionLogId?.gateway.toUpperCase() || 'N/A'}
                                            </p>
                                            <p class="mb-2">
                                                <strong>Transaction ID:</strong> ${data.paymentDetails.transactionId || 'N/A'}
                                            </p>
                                        </div>
                                    </div>
                                </div>
                            </div>

                            <div class="card border-0 shadow-sm">
                                <div class="card-header bg-light">
                                    <h5 class="mb-0">Customer Information</h5>
                                </div>
                                <div class="card-body">
                                    <div class="d-flex align-items-start">
                                        ${data.bookingBy.user.profileImage ? 
                                            `<img src="${data.bookingBy.user.profileImage}" 
                                                  class="rounded-circle me-3" 
                                                  width="80" 
                                                  height="80"
                                                  alt="Profile Image"  onerror="this.onerror=null;this.src='/temp/default-user.png'">` : ''}
                                        <div>
                                            <h5 class="mb-1">${data.bookingBy.user.firstName} ${data.bookingBy.user.lastName}</h5>
                                            <p class="mb-2 text-muted">
                                                <i class="fas fa-envelope me-1"></i>
                                                ${data.bookingBy.user.email}
                                            </p>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>

                        <!-- Right Column - Payment Summary -->
                        <div class="col-md-5">
                            <div class="card border-0 shadow-sm h-100">
                                <div class="card-header bg-light">
                                    <h5 class="mb-0">Payment Summary</h5>
                                </div>
                                <div class="card-body">
                                    <div class="payment-summary">
                                        <div class="d-flex justify-content-between mb-2">
                                            <span>Subtotal (${data.numberOfAttendees} attendees):</span>
                                            <span>${formatPrice(data.paymentDetails.baseAmount)}</span>
                                        </div>
                                        <div class="d-flex justify-content-between mb-2">
                                            <span>Platform Fee:</span>
                                            <span>${formatPrice(data.paymentDetails.taxAmount)}</span>
                                        </div>
                                        ${data.paymentDetails.status === "refunded" ? `
                                            <div class="d-flex justify-content-between mb-2 text-danger">
                                                <span>Refund Amount:</span>
                                                <span>-${formatPrice(data.paymentDetails.refundAmount)}</span>
                                            </div>
                                        ` : ''}
                                        <div class="d-flex justify-content-between border-top pt-2">
                                            <strong>${data.paymentDetails.status === "refunded" ? 'Final Amount After Refund:' : 'Total Amount:'}</strong>
                                            <strong>${ (data.paymentDetails.status === "refunded" ? 
                                                formatPrice(data.paymentDetails.totalAmount - (data.paymentDetails.refundAmount || 0)) : 
                                                formatPrice(data.paymentDetails.totalAmount)
                                            )}</strong>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                        ${reviewHtml}
                      

                    </div>
                </div>`;

                modal.find('#bookingDetailsContent').html(htmlData);
            }).fail(function() {
                modal.find('#bookingDetailsContent').html('<div class="alert alert-danger">Failed to load booking details</div>');
            });
        });
    });
</script>

<script>
$(document).ready(function() {
    // Calculate total amount when attendees change
    $('#numberOfAttendees').on('change input', function() {
        const attendees = parseInt($(this).val()) || 1;
        const pricePerAttendee = parseFloat($('#pricePerAttendee').val());
        // const totalAmount = attendees * pricePerAttendee;
        // $('#totalAmount').val(totalAmount.toFixed(2));
    });

    // Handle form submission
    $('#bookingForm').on('submit', function(e) {
        e.preventDefault();
        
        const formData = $(this).serialize();
        const submitBtn = $(this).find('button[type="submit"]');
        submitBtn.prop('disabled', true).html('<span class="spinner-border spinner-border-sm" role="status" aria-hidden="true"></span> Processing...');
        
        $.ajax({
        url: $(this).attr('action'),
        method: 'POST',
        data: formData,
        success: function(response) {
            $('#eventMemberModal').modal('hide');
            Swal.fire({
                title: 'Success!',
                text: response.message || 'Booking created successfully',
                icon: 'success',
                confirmButtonText: 'OK'
            }).then(() => {
                location.reload(); // Reload the page
            });
        },
        error: function(xhr) {
             $('#eventMemberModal').modal('hide');
            let errorMessage = xhr.responseJSON?.message || 'Error creating booking';
            Swal.fire({
            title: 'Error!',
            text: errorMessage,
            icon: 'error',
            confirmButtonText: 'OK'
            });
        },
        complete: function() {
            submitBtn.prop('disabled', false).html('Confirm Booking');
        }
        });
    });
});
</script>
</body>