
<body>
    <div class="layout-wrapper layout-content-navbar">
        <div class="layout-container">
            <%- include('../../../partials/sideBar') %>
            <div class="layout-page">
                <%- include('../../../partials/header') %>
                <div class="content-wrapper">
                    <div class="admin-container">
                        <div class="admin-header">
                          <h2>Newsletter List</h2>
                        </div>

                        <div class="row g-4 mb-4">
                            <div class="col-md-12 col-lg-12">
                                <div class="stats-card">
                                    <div class="card-body">
                                        <div class="">
                                            <table class="table table-hover" id="newsletterTable">
                                                <thead class="table-light">
                                                    <tr>
                                                        <th>#</th>
                                                        <th>Email</th>
                                                        <th>Status</th>
                                                        <th>Subscribed Date</th>
                                                    </tr>
                                                </thead>
                                                <tbody>
                                                    <% newsletters.forEach((newsletter, index) => { %>
                                                        <tr>
                                                            <td><%= index + 1 %></td>
                                                            <td><%= newsletter.email %></td>
                                                            <td>
                                                                <% if (newsletter.isSubscribed) { %>
                                                                    <span class="badge status-badge bg-success"> Subscribed</span>
                                                                <% } else { %>
                                                                    <span class="badge status-badge bg-danger"> Unsubscribed</span>
                                                                <% } %>
                                                            </td>
                                                            <td><%= formatDate(newsletter.subscribedAt) %></td>
                                                        </tr>
                                                    <% }); %>
                                                </tbody>
                                            </table>
                                        </div>

                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>

                  <%- include('../../../partials/footer') %>
                  <div class="content-backdrop fade"></div>
                </div>
            </div>
        </div>
        <div class="layout-overlay layout-menu-toggle"></div>
    </div> 

</body>


<script>
    $(document).ready(function() {
        $('#newsletterTable').DataTable({});
    });
</script>

