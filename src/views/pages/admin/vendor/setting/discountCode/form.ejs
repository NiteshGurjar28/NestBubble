
<body>
    <div class="layout-wrapper layout-content-navbar">
        <div class="layout-container">
            <%- include('../../../../../partials/sideBar') %>
            <div class="layout-page">
                <%- include('../../../../../partials/header') %>
                <div class="content-wrapper">
                    <div class="admin-container">
                        <div class="admin-header">
                          <h2><%= formTitle %></h2>
                            <a href="/vendor/discount-code" class="btn btn-gradient">Back</a>
                        </div>

                        <div class="row g-4 mb-4">
                            <div class="col-md-12 col-lg-12">
                                <div class="stats-card">

                                    <div class="card-body">
                                        <form id="discountCodeForm" method="POST" enctype="multipart/form-data" 
                                                action="<%= isEditMode ? `/vendor/discount-code/${formData.id}/edit` : '/vendor/discount-code' %>">
                                            <div class="mb-3">
                                                <label for="codeName" class="form-label">Code Name *</label>
                                                <input type="text" class="form-control" id="codeName" name="codeName" 
                                                    value="<%= formData.codeName || '' %>" required>
                                            </div>
                                            <div class="mb-3">
                                                <label for="codeValue" class="form-label">Code Value (%) *</label>
                                                <input type="text" class="form-control" id="codeValue" name="codeValue" 
                                                    value="<%= formData.codeValue || '' %>" required>
                                            </div>
                                            
                                            <div class="mb-3 form-check form-switch">
                                                <input class="form-check-input" type="checkbox" id="status" name="status"
                                                    <%= formData.status ? 'checked' : '' %>>
                                                <label class="form-check-label" for="status">Active</label>
                                            </div>
                                            
                                            <button type="submit" class="btn btn-primary">
                                                <%= isEditMode ? 'Update' : 'Save' %>
                                            </button>
                                        </form>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>

                  <%- include('../../../../../partials/footer') %>
                  <div class="content-backdrop fade"></div>
                </div>
            </div>
        </div>
        <div class="layout-overlay layout-menu-toggle"></div>
    </div> 

</body>

<script>

  $(document).ready(function() {
    $('#discountCodeForm').on('submit', function(e) {
      e.preventDefault();

      const url = $(this).attr('action');
      const isEditMode = '<%= isEditMode %>' === 'true';
      
      $.ajax({
        url: url,
        type: 'POST',
        data: $(this).serialize(),
        success: function(result) {
          if (result.success) {
            Swal.fire({
              title: 'Success!',
              text: isEditMode ? 'Discount Code updated successfully' : 'Discount Code added successfully',
              icon: 'success',
              confirmButtonText: 'OK'
            }).then(() => {
              window.location.href = '/vendor/discount-code';
            });
          } else {
            Swal.fire({
              title: 'Error!',
              text: result.message || 'Something went wrong',
              icon: 'error',
              confirmButtonText: 'OK'
            });
          }
        },
        error: function(xhr) {
          const errorMsg = xhr.responseJSON?.message || 'An error occurred';
          Swal.fire({
            title: 'Error!',
            text: errorMsg,
            icon: 'error',
            confirmButtonText: 'OK'
          });
        }
      });
    });
  });
</script>
