<body>
    <div class="layout-wrapper layout-content-navbar">
        <div class="layout-container">
            <%- include('../../../../../partials/sideBar') %>
            <div class="layout-page">
                <%- include('../../../../../partials/header') %>
                <div class="content-wrapper">
                    <div class="admin-container">
                        <div class="admin-header">
                          <h2>Vendor Refund Policy List</h2>
                            <% if(adminPerms.includes('vendor-refund-policies-create')) { %>
                                <a href="/vendor/refund-policies/add" class="btn btn-gradient">Add New</a>
                            <% } %>
                        </div>

                        <div class="row g-4 mb-4">
                            <div class="col-md-12 col-lg-12">
                                <div class="stats-card">
                                    <div class="card-body">
                                        <div class="">
                                            <table class="table table-striped table-hover" id="refundPolicyTable">
                                                <thead>
                                                    <tr>
                                                        <th>#</th>
                                                        <th>Refund Period</th>
                                                        <th>Refund Percentage</th>
                                                        <th>Status</th>
                                                        <th>Created</th>
                                                        <th>Actions</th>
                                                    </tr>
                                                </thead>
                                                <tbody>
                                                    <% if(refundPolicies.length > 0){ %>
                                                        <% refundPolicies.forEach((policy, index) => { %>
                                                            <tr>
                                                                <td><%= index + 1 %></td>
                                                                <td><%= policy.timeValue %> <%= policy.timeUnit %></td>
                                                                <td><%= policy.percentage %>%</td>
                                                                <td>
                                                                    <% if(adminPerms.includes('vendor-refund-policies-status')) { %>
                                                                        <div class="form-check form-switch">
                                                                            <input class="form-check-input status-toggle" 
                                                                                type="checkbox" 
                                                                                data-id="<%= policy._id %>"
                                                                                <%= policy.status ? 'checked' : '' %>>
                                                                        </div>
                                                                    <% } %>
                                                                </td>
                                                                <td> 
                                                                    <%= formatDate(policy.createdAt) %>
                                                                </td>
                                                                <td>
                                                                    <% if(adminPerms.includes('vendor-refund-policies-edit')) { %>
                                                                        <a href="/vendor/refund-policies/<%= policy._id %>/edit" class="btn btn-sm btn-icon btn-outline-primary ms-1"><i class="bx bx-edit"></i> </a>
                                                                    <% } %>
                                                                </td>
                                                            </tr>
                                                        <% }); %>
                                                    <% }; %>
                                                </tbody>
                                            </table>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>

                  <%- include('../../../../../partials/footer') %>
                  <div class="content-backdrop fade"></div>
                </div>
            </div>
        </div>
        <div class="layout-overlay layout-menu-toggle"></div>
    </div> 

    <script>
        $(document).ready(function () {
            $('#refundPolicyTable').DataTable({
                responsive: true
            });

             $('.status-toggle').change(function() {
                const policyId = $(this).data('id');
                const isChecked = $(this).is(':checked');
                
                $.ajax({
                    url: `/vendor/refund-policies/${policyId}/status`,
                    type: 'PUT',
                    data: { status: isChecked },
                    success: function(response) {
                        if (response.success) {
                            Swal.fire({
                                icon: 'success',
                                title: 'Success!',
                                text: response.message,
                                timer: 1500,
                                showConfirmButton: false
                            });
                        } else {
                            Swal.fire({
                                icon: 'error',
                                title: 'Error!',
                                text: response.message
                            });
                            // Revert the toggle if failed
                            $(this).prop('checked', !isChecked);
                        }
                    },
                    error: function(xhr) {
                        Swal.fire({
                            icon: 'error',
                            title: 'Error!',
                            text: xhr.responseJSON?.message || 'Failed to update status'
                        });
                        // Revert the toggle on error
                        $(this).prop('checked', !isChecked);
                    }
                });
            });
        });
    </script>
</body>