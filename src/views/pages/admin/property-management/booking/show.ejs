


<body>
    <style>
        .card {
            border: none;
            border-radius: 10px;
            box-shadow: 0 0.15rem 1.75rem 0 rgba(58, 59, 69, 0.15);
            margin-bottom: 24px;
        }
        
        .card-header {
            background-color: var(--primary-color);
            color: white;
            border-radius: 10px 10px 0 0 !important;
            padding: 15px 20px;
            font-weight: 600;
        }
        
        .info-badge {
            padding: 6px 12px;
            border-radius: 20px;
            font-weight: 500;
            font-size: 0.85rem;
        }
        
        .booking-timeline {
            position: relative;
            padding-left: 30px;
            margin: 20px 0;
        }
        
        .booking-timeline::before {
            content: '';
            position: absolute;
            left: 10px;
            top: 0;
            height: 100%;
            width: 2px;
            background-color: var(--primary-color);
        }
        
        .timeline-item {
            position: relative;
            margin-bottom: 20px;
        }
        
        .timeline-item::before {
            content: '';
            position: absolute;
            left: -25px;
            top: 5px;
            width: 12px;
            height: 12px;
            border-radius: 50%;
            background-color: var(--primary-color);
            border: 2px solid white;
            box-shadow: 0 0 0 2px var(--primary-color);
        }
        
        .timeline-date {
            font-size: 0.8rem;
            color: var(--secondary-color);
        }
        
        .amount-breakdown {
            background-color: #f8f9fa;
            border-radius: 8px;
            padding: 15px;
        }
        
        .amount-row {
            display: flex;
            justify-content: space-between;
            padding: 8px 0;
            border-bottom: 1px dashed #dee2e6;
        }
        
        .amount-total {
            font-weight: 700;
            font-size: 1.1rem;
            border-bottom: none;
            border-top: 2px solid #dee2e6;
            margin-top: 5px;
            padding-top: 12px;
        }
        
        .service-badge {
            background-color: #e9ecef;
            color: #495057;
            padding: 4px 8px;
            border-radius: 4px;
            font-size: 0.75rem;
            margin-right: 5px;
        }
        
        .status-badge {
            padding: 6px 12px;
            border-radius: 20px;
            font-weight: 500;
        }
        
        .guest-avatar {
            width: 70px;
            height: 70px;
            border-radius: 50%;
            object-fit: cover;
            border: 3px solid #e9ecef;
        }
        
        .initials-avatar {
            width: 70px;
            height: 70px;
            border-radius: 50%;
            display: flex;
            align-items: center;
            justify-content: center;
            background-color: var(--primary-color);
            color: white;
            font-weight: bold;
            font-size: 1.5rem;
            border: 3px solid #e9ecef;
        }
        
        .action-buttons {
            display: flex;
            gap: 10px;
            margin-top: 20px;
        }
        
        @media (max-width: 768px) {
            .admin-header {
                flex-direction: column;
                align-items: flex-start;
                gap: 15px;
            }
            
            .action-buttons {
                flex-wrap: wrap;
            }
        }
    </style>
    <div class="layout-wrapper layout-content-navbar">
        <div class="layout-container">
            <%- include('../../../../partials/sideBar') %>
            <div class="layout-page">
                <%- include('../../../../partials/header') %>
                <div class="content-wrapper">
                    <div class="admin-container">
                        <div class="admin-header">
                            <div>
                                <h2 class="mb-1">Booking #<%= booking.bookingId %></h2>
            
                            </div>
                            <div class="action-buttons">
                                <a href="/property/<%= booking.propertyId._id %>/show" class="btn btn-outline-primary">
                                    <i class="fas fa-arrow-left me-2"></i> Back to Property
                                </a>
                                <!-- <a href="/admin/bookings/edit/<%= booking._id %>" class="btn btn-outline-secondary">
                                    <i class="fas fa-edit me-2"></i> Edit Booking
                                </a> -->
                                <!-- <button class="btn btn-outline-dark">
                                    <i class="fas fa-print me-2"></i> Print
                                </button> -->
                            </div>
                        </div>

                        <div class="row">
                            <!-- Left Column - Booking Information -->
                            <div class="col-lg-8">
                                <!-- Booking Dates & Guest Details -->
                                <div class="row mb-3">
                                    <div class="col-md-6 mb-4">
                                        <div class="card h-100 ">
                                            <div class="card-header">
                                                <h5 class="mb-0">Stay Details</h5>
                                            </div>
                                            <div class="card-body">
                                                <div class="d-flex align-items-center mb-3">
                                                    <div class="bg-primary bg-opacity-10 p-3 rounded me-3">
                                                        <i class="fas fa-calendar-check  text-white fa-lg"></i>
                                                    </div>
                                                    <div>
                                                        <h6 class="mb-0">Check-In</h6>
                                                        <p class="mb-0 fw-bold">
                                                            <%= formatDate(booking.bookingDates.startDate, { format: "full" }) %>
                                                        </p>
                                                    </div>
                                                </div>
                                                
                                                <div class="d-flex align-items-center mb-3">
                                                    <div class="bg-primary bg-opacity-10 p-3 rounded me-3">
                                                        <i class="fas fa-calendar-times text-white fa-lg"></i>
                                                    </div>
                                                    <div>
                                                        <h6 class="mb-0">Check-Out</h6>
                                                        <p class="mb-0 fw-bold">
                                                            <%= formatDate(booking.bookingDates.endDate, { format: "full" }) %>
                                                        </p>
                                                    </div>
                                                </div>
                                                
                                                <div class="d-flex align-items-center">
                                                    <div class="bg-primary bg-opacity-10 p-3 rounded me-3">
                                                        <i class="fas fa-moon text-white fa-lg"></i>
                                                    </div>
                                                    <div>
                                                        <h6 class="mb-0">Total Nights</h6>
                                                        <p class="mb-0 fw-bold"><%= booking.bookingDates.totalNights %> nights</p>
                                                    </div>
                                                </div>
                                            </div>
                                        </div>
                                    </div>
                                    
                                    <div class="col-md-6">
                                        <div class="card h-100">
                                            <div class="card-header">
                                                <h5 class="mb-0">Guest Details</h5>
                                            </div>
                                            <div class="card-body">
                                                <div class="d-flex align-items-center mb-3">
                                                    <a href="/guest/<%= booking.guestId._id %>/show">
                                                        <% if (booking.guestId.profileImage) { %>
                                                            <img src="<%= booking.guestId.profileImage %>" class="guest-avatar me-3" alt="Guest">
                                                        <% } else { %>
                                                            <div class="initials-avatar me-3">
                                                                <%= booking.guestId.firstName.charAt(0).toUpperCase() %><%= booking.guestId.lastName.charAt(0).toUpperCase() %>
                                                            </div>
                                                        <% } %>
                                                    </a>
                                                    <div>
                                                        <h5 class="mb-0"><%= booking.guestId.firstName %> <%= booking.guestId.lastName %></h5>
                                                        <p class="mb-0 text-muted"><i class="fas fa-envelope me-1"></i> <%= booking.guestId.email %></p>
                                                        <% if (booking.guestId.phone) { %>
                                                            <p class="mb-0"><i class="fas fa-phone me-1"></i> <%= booking.guestId.phone %></p>
                                                        <% } %>
                                                    </div>
                                                </div>
                                                
                                                <hr>
                                                
                                                <h6 class="mb-2">Guest Breakdown</h6>
                                                <div class="row">
                                                    <div class="col-6 mb-2">
                                                        <span class="text-muted">Adults:</span>
                                                        <strong class="d-block"><%= booking.guestDetails.adults %></strong>
                                                    </div>
                                                    <div class="col-6 mb-2">
                                                        <span class="text-muted">Children:</span>
                                                        <strong class="d-block"><%= booking.guestDetails.children || 0 %></strong>
                                                    </div>
                                                    <div class="col-6">
                                                        <span class="text-muted">Infants:</span>
                                                        <strong class="d-block"><%= booking.guestDetails.infants || 0 %></strong>
                                                    </div>
                                                    <div class="col-6">
                                                        <span class="text-muted">Total:</span>
                                                        <strong class="d-block"><%= totalGuests %></strong>
                                                    </div>
                                                </div>
                                            </div>
                                        </div>
                                    </div>
                                </div>

                                       <!-- Extra Services -->
                                <% if (booking.extraFeatures && booking.extraFeatures.length > 0) { %>
                                <div class="card mb-4 mt-4">
                                    <div class="card-header">
                                        <h5 class="mb-0">Extra Services</h5>
                                    </div>
                                    <div class="card-body">
                                        <div class="table-responsive">
                                            <table class="table table-hover">
                                                <thead>
                                                    <tr>
                                                        <th>Service Type</th>
                                                        <th>Duration</th>
                                                        <th>Daily Rate</th>
                                                        <th class="text-end">Total Amount</th>
                                                    </tr>
                                                </thead>
                                                <tbody>
                                                    <% booking.extraFeatures.forEach(feature => { %>
                                                    <tr>
                                                        <td>
                                                            <strong class="text-capitalize"><%= feature.featureType.replace(/([A-Z])/g, ' $1') %></strong>
                                                        </td>
                                                        <td>
                                                            <%= formatDate(feature.duration.startDate) %> to 
                                                            <%= formatDate(feature.duration.endDate) %>
                                                            (<%= feature.duration.totalDays %> days)
                                                        </td>
                                                        <td><%= formatPrice(feature.pricing.dailyRate) %></td>
                                                        <td class="text-end fw-bold"><%= formatPrice(feature.pricing.totalAmount) %></td>
                                                    </tr>
                                                    <% }); %>
                                                </tbody>
                                                <tfoot>
                                                    <tr>
                                                        <td colspan="3" class="text-end fw-bold">Extra Services Total:</td>
                                                        <td class="text-end fw-bold"><%= formatPrice(booking.amountBreakdown.extraFeaturesTotal) %></td>
                                                    </tr>
                                                </tfoot>
                                            </table>
                                        </div>
                                    </div>
                                </div>
                                <% } %>


                                <!-- Property Information -->
                                <div class="card">
                                    <div class="card-header">
                                        <h5 class="mb-0">Property Information</h5>
                                    </div>
                                    <div class="card-body">
                                        <div class="d-flex">
                                            <% if (booking.propertyId.images && booking.propertyId.images.length > 0) { %>
                                                <img src="<%= booking.propertyId.images[0].url %>" class="rounded me-4" width="120" height="90" style="object-fit: cover;" alt="Property">
                                            <% } %>
                                            <div class="flex-grow-1">
                                                <h5 class="mb-1"><%= booking.propertyId.name %></h5>
                                                <p class="mb-1 text-muted">
                                                    <i class="fas fa-map-marker-alt me-2"></i>
                                                    <%= booking.propertyId.address.street %>, <%= booking.propertyId.address.city %>, <%= booking.propertyId.address.state %>, <%= booking.propertyId.address.pincode %>
                                                </p>
                                                <div class="d-flex flex-wrap gap-2 mt-2">
                                                    <span class="service-badge"><%= booking?.propertyId?.propertyType?.name %></span>
                                                    <% if (booking.propertyId.bedrooms) { %>
                                                        <span class="service-badge"><%= booking.propertyId.bedrooms %> Bedrooms</span>
                                                    <% } %>
                                                    <% if (booking.propertyId.bathrooms) { %>
                                                        <span class="service-badge"><%= booking.propertyId.bathrooms %> Bathrooms</span>
                                                    <% } %>
                                                </div>
                                            </div>
                                        </div>
                                        <div class="mt-3">
                                            <a href="/property/<%= booking.propertyId._id %>/show" class="btn btn-sm btn-outline-primary">
                                                <i class="fas fa-external-link-alt me-1"></i> View Property Details
                                            </a>
                                        </div>
                                    </div>
                                </div>

               
                         
                            </div>

                            <!-- Right Column - Payment & Transaction Details -->
                            <div class="col-lg-4">
                                <!-- Payment Summary -->
                                <div class="card  mb-4" >
                                    <div class="card-header">
                                        <h5 class="mb-0">Payment Summary</h5>
                                    </div>
                                    <div class="card-body">
                                        <div class="amount-breakdown">
                                            <!-- Base Amount -->
                                            <div class="amount-row">
                                                <span>Base Amount (<%= booking.bookingDates.totalNights %> nights)</span>
                                                <span><%= formatPrice(booking.amountBreakdown.totalAmountBeforeTax) %></span>
                                            </div>
                                            
                                            <!-- Extra Services -->
                                            <% if (booking.amountBreakdown.extraFeaturesTotal > 0) { %>
                                            <div class="amount-row">
                                                <span>Extra Services</span>
                                                <span class="text-success">+<%= formatPrice(booking.amountBreakdown.extraFeaturesTotal) %></span>
                                            </div>
                                            <% } %>
                                            
                                            <!-- Cleaning Fee -->
                                            <!-- <% if (booking.amountBreakdown.cleaningFeeAmount > 0) { %>
                                            <div class="amount-row">
                                                <span>Cleaning Fee</span>
                                                <span>+<%= formatPrice(booking.amountBreakdown.cleaningFeeAmount) %></span>
                                            </div>
                                            <% } %> -->
                                            
                                            <!-- Taxes -->
                                            <% if (booking.amountBreakdown.totalTaxAmount > 0) { %>
                                            <div class="amount-row">
                                                <span>Taxes</span>
                                                <span>+<%= formatPrice(booking.amountBreakdown.totalTaxAmount) %></span>
                                            </div>
                                            <% } %>
                                            
                                            <!-- Discounts -->
                                            <% if (booking.amountBreakdown.totalDiscountAmount > 0) { %>
                                            <div class="amount-row">
                                                <span>Discounts</span>
                                                <span class="text-danger">-<%= formatPrice(booking.amountBreakdown.totalDiscountAmount) %></span>
                                            </div>
                                            <% } %>
                                            
                                            <!-- Final Amount -->
                                            <div class="amount-row amount-total">
                                                <span>Total Amount</span>
                                                <span><%= formatPrice(booking.amountBreakdown.finalAmount) %></span>
                                            </div>
                                            
                                            <!-- Platform Fee & Host Earning -->
                                            <div class="amount-row">
                                                <span>Platform Fee :</span>
                                                <span class="text-danger">-<%= formatPrice(booking.amountBreakdown.totalTaxAmount) %></span>
                                            </div>
                                            
                                            <!-- Host Earning -->
                                            <div class="amount-row amount-total" style="border-top: 2px dashed #dee2e6;">
                                                <span class="fw-bold">Host Earning:</span>
                                                <span class="fw-bold text-success">
                                                    <%= formatPrice(booking.amountBreakdown.finalAmount - (booking.amountBreakdown.totalTaxAmount)) %>
                                                </span>
                                            </div>
                                        </div>
                                        
                                        <!-- Transaction Details -->
                                        <% if (booking.transactionLogId) { %>
                                        <div class="mt-4">
                                            <h6 class="mb-3">Transaction Details</h6>
                                            <div class="bg-light p-3 rounded">
                                                <div class="d-flex justify-content-between mb-2">
                                                    <span class="text-muted">Gateway:</span>
                                                    <span class="fw-bold"><%= booking.transactionLogId.gateway %></span>
                                                </div>
                                                <div class="d-flex justify-content-between mb-2">
                                                    <span class="text-muted">Status:</span>
                                                    <span class="badge bg-<%= 
                                                        booking.transactionLogId.status === 'paid' ? 'success' : 
                                                        booking.transactionLogId.status === 'pending' ? 'warning' : 'danger' 
                                                    %>">
                                                        <%= booking.transactionLogId.status.toUpperCase() %>
                                                    </span>
                                                </div>
                                                <div class="d-flex justify-content-between mb-2">
                                                    <span class="text-muted">Transaction ID:</span>
                                                    <span class="font-monospace"><%= booking.transactionLogId.gatewayPaymentId %></span>
                                                </div>
                                                <div class="d-flex justify-content-between">
                                                    <span class="text-muted">Date:</span>
                                                    <span><%= formatDate(booking.transactionLogId.createdAt) %></span>
                                                </div>
                                            </div>
                                        </div>
                                        <% } %>
                                        
                                        <!-- Refund Details -->
                                        <% if (booking.cancellation?.isCancelled) { %>
                                            <div class="alert alert-warning mt-3">
                                                <h6 class="alert-heading mb-2">
                                                    <i class="fas fa-times-circle me-1"></i> Booking Cancelled
                                                </h6>
                                                <div class="row">
                                                    <div class="col-md-6 mb-2">
                                                        <span class="text-muted">Cancelled By:</span>
                                                        <span class="badge bg-secondary ms-1 text-capitalize">
                                                            <%= booking.cancellation.cancelledBy %>
                                                        </span>
                                                    </div>
                                                    <div class="col-md-6 mb-2">
                                                        <span class="text-muted">Cancellation Date:</span>
                                                        <strong class="d-block">
                                                            <%= formatDate(booking.cancellation.cancellationDate) %>
                                                        </strong>
                                                    </div>
                                                    <div class="col-md-6 mb-2">
                                                        <span class="text-muted">Refund Amount:</span>
                                                        <strong class="d-block text-success">
                                                            <%= formatPrice(booking.cancellation.refundAmount || 0) %>
                                                        </strong>
                                                    </div>
                                                    <div class="col-md-6 mb-2">
                                                        <span class="text-muted">Penalty Amount:</span>
                                                        <strong class="d-block text-danger">
                                                            <%= formatPrice(booking.cancellation.penaltyAmount || 0) %>
                                                        </strong>
                                                    </div>
                                                    <% if (booking.cancellation.penaltyPercent) { %>
                                                    <div class="col-md-6 mb-2">
                                                        <span class="text-muted">Penalty Percentage:</span>
                                                        <strong class="d-block">
                                                            <%= booking.cancellation.penaltyPercent %>%
                                                        </strong>
                                                    </div>
                                                    <% } %>
                                                    <% if (booking.cancellation.daysBeforeCancellation) { %>
                                                    <div class="col-md-6 mb-2">
                                                        <span class="text-muted">Days Before Check-in:</span>
                                                        <strong class="d-block">
                                                            <%= booking.cancellation.daysBeforeCancellation %> days
                                                        </strong>
                                                    </div>
                                                    <% } %>
                                                    <div class="col-12 mt-2">
                                                        <span class="text-muted">Cancellation Reason:</span>
                                                        <p class="mb-0 p-2 bg-light rounded mt-1">
                                                            <i class="fas fa-comment me-1 text-muted"></i>
                                                            <%= booking.cancellation.cancellationReason %>
                                                        </p>
                                                    </div>
                                                </div>
                                            </div>
                                        <% } %>
                                    </div>

                                
                              
                                </div>
                                <!-- Rating & Review -->
                                <% if (rating) { %>
                                    <div class="card mt-4">
                                        <div class="card-header">
                                            <h5 class="mb-0">Guest Rating & Review</h5>
                                        </div>
                                        <div class="card-body">
                                            <!-- Overall Rating -->
                                            <div class="d-flex align-items-center mb-4">
                                                <div class="rating-display me-3">
                                                    <% for (let i = 1; i <= 5; i++) { %>
                                                        <i class="fas fa-star <%= i <= rating.rating ? 'text-warning' : 'text-secondary' %>"></i>
                                                    <% } %>
                                                </div>
                                                <div>
                                                    <h3 class="mb-0"><%= rating.rating %>/5</h3>
                                                    <p class="text-muted mb-0">Overall Experience</p>
                                                </div>
                                            </div>

                                            <!-- Detailed Ratings with Stars -->
                                            <div class="row mb-4">
                                                <% if (rating.comfortableRating) { %>
                                                <div class="col-md-6 mb-3">
                                                    <div class="d-flex justify-content-between align-items-center mb-1">
                                                        <span class="fw-medium">Comfort</span>
                                                        <span class="text-muted"><%= rating.comfortableRating %>/5</span>
                                                    </div>
                                                    <div class="rating-display">
                                                        <% for (let i = 1; i <= 5; i++) { %>
                                                            <i class="fas fa-star <%= i <= rating.comfortableRating ? 'text-warning' : 'text-secondary' %>"></i>
                                                        <% } %>
                                                    </div>
                                                </div>
                                                <% } %>

                                                <% if (rating.cleanlinessRating) { %>
                                                <div class="col-md-6 mb-3">
                                                    <div class="d-flex justify-content-between align-items-center mb-1">
                                                        <span class="fw-medium">Cleanliness</span>
                                                        <span class="text-muted"><%= rating.cleanlinessRating %>/5</span>
                                                    </div>
                                                    <div class="rating-display">
                                                        <% for (let i = 1; i <= 5; i++) { %>
                                                            <i class="fas fa-star <%= i <= rating.cleanlinessRating ? 'text-warning' : 'text-secondary' %>"></i>
                                                        <% } %>
                                                    </div>
                                                </div>
                                                <% } %>

                                                <% if (rating.facilitiesRating) { %>
                                                <div class="col-md-6 mb-3">
                                                    <div class="d-flex justify-content-between align-items-center mb-1">
                                                        <span class="fw-medium">Facilities</span>
                                                        <span class="text-muted"><%= rating.facilitiesRating %>/5</span>
                                                    </div>
                                                    <div class="rating-display">
                                                        <% for (let i = 1; i <= 5; i++) { %>
                                                            <i class="fas fa-star <%= i <= rating.facilitiesRating ? 'text-warning' : 'text-secondary' %>"></i>
                                                        <% } %>
                                                    </div>
                                                </div>
                                                <% } %>
                                            </div>

                                            <!-- Review Text -->
                                            <% if (rating.review) { %>
                                                <div class="border-top pt-3 mt-3">
                                                    <h6 class="mb-2">Guest Review</h6>
                                                    <p class="mb-0 fst-italic">"<%= rating.review %>"</p>
                                                </div>
                                            <% } %>

                                            <!-- Rating Meta Information -->
                                            <div class="border-top pt-3 mt-3">
                                                <div class="row">
                                                    <div class="col-md-6">
                                                        <div class="d-flex align-items-center">
                                                            <div class="bg-light rounded-circle p-2 me-2">
                                                                <i class="fas fa-user text-primary"></i>
                                                            </div>
                                                            <div>
                                                                <small class="text-muted">Rated by</small>
                                                                <p class="mb-0 fw-medium"><%= rating.guestId.firstName %> <%= rating.guestId.lastName %></p>
                                                            </div>
                                                        </div>
                                                    </div>
                                                    <div class="col-md-6">
                                                        <div class="d-flex align-items-center">
                                                            <div class="bg-light rounded-circle p-2 me-2">
                                                                <i class="fas fa-clock text-primary"></i>
                                                            </div>
                                                            <div>
                                                                <small class="text-muted">Date Rated</small>
                                                                <p class="mb-0 fw-medium"><%= new Date(rating.createdAt).toLocaleDateString('en-US', { year: 'numeric', month: 'long', day: 'numeric' }) %></p>
                                                            </div>
                                                        </div>
                                                    </div>
                                                </div>
                                            </div>
                                        </div>
                                    </div>
                                <% } %>
                        </div>
                    </div>

                    <%- include('../../../../partials/footer') %>
                    <div class="content-backdrop fade"></div>
                </div>
            </div>
        </div>
        <div class="layout-overlay layout-menu-toggle"></div>
    </div>

    <!-- Bootstrap JS -->
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
    
    <script>
        // Print functionality
        document.querySelector('.btn-outline-dark').addEventListener('click', function() {
            window.print();
        });
        
        // Additional interactive functionality can be added here
    </script>
</body>
