<body>
    <div class="layout-wrapper layout-content-navbar">
        <div class="layout-container">
            <%- include('../../../../partials/sideBar') %>
            <div class="layout-page">
                <%- include('../../../../partials/header') %>
                <div class="content-wrapper">
                    <div class="admin-container">
                        <div class="admin-header">
                            <h2>Admin Roles & Permissions</h2>
                        </div>

                        <div class="row g-4 mb-4">
                            <div class="col-md-12 col-lg-12">
                                <div class="card">
                                    <div class="card-body">
                                        <div class="">
                                            <table class="table table-hover" id="adminRolesTable">
                                                <thead>
                                                    <tr>
                                                        <th>S.No</th>
                                                        <th>Role</th>
                                                        <th>Permissions Count</th>
                                                        <th>Actions</th>
                                                    </tr>
                                                </thead>
                                                <tbody>
                                                    <% adminRoles.forEach((role, index) => { %>
                                                        <tr>
                                                            <td><%= index + 1 %></td>
                                                            <td><%= role.role.replace(/_/g, ' ').toUpperCase() %></td>
                                                            <td><%= role.permissions ? role.permissions.length : 0 %></td> 
                                                            <td>
                                                                <a href="/admin-permissions/<%= role.role %>/edit" 
                                                                   class="btn btn-sm btn-outline-primary">
                                                                   Manage Permissions
                                                                </a>
                                                            </td>
                                                        </tr>
                                                    <% }); %>
                                                </tbody>
                                            </table>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>

                    <%- include('../../../../partials/footer') %>
                    <div class="content-backdrop fade"></div>
                </div>
            </div>
        </div>
        <div class="layout-overlay layout-menu-toggle"></div>
    </div>

    <script>
        $(document).ready(function () {
            $('#adminRolesTable').DataTable({
                responsive: true,
                columnDefs: [
                    { orderable: false, targets: [3] } // Disable sorting for actions column
                ]
            });

            // Handle success messages from URL query params
            const urlParams = new URLSearchParams(window.location.search);
            if (urlParams.has('success')) {
                Swal.fire({
                    icon: 'success',
                    title: 'Success!',
                    text: urlParams.get('success'),
                    timer: 2000,
                    showConfirmButton: false
                });
                // Clean URL
                window.history.replaceState({}, document.title, window.location.pathname);
            }
        });
    </script>
</body>