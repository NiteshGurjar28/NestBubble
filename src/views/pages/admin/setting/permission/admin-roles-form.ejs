<body>
    <div class="layout-wrapper layout-content-navbar">
        <div class="layout-container">
            <%- include('../../../../partials/sideBar') %>
            <div class="layout-page">
                <%- include('../../../../partials/header') %>
                <div class="content-wrapper">
                    <div class="admin-container">
                        <div class="admin-header">
                            <h2>Manage Permissions for <%= role.replace(/_/g, ' ').toUpperCase() %></h2>
                            <a href="/admin-roles" class="btn btn-gradient">Back to Roles</a>
                        </div>

                        <div class="row g-4 mb-4">
                            <div class="col-md-12 col-lg-12">
                                <div class="card">
                                    <div class="card-body">
                                        <form id="adminRolesForm">
                                            <input type="hidden" name="role" value="<%= role %>">
                                            <div class="row">
                                                <div class="col-md-12">
                                                    <h4 class="mb-4">Available Permissions</h4>
                                                    <div class="permissions-container">
                                                        <% allPermissions.forEach(permission => { 
                                                            const isChecked = rolePermission && rolePermission.permissions.some(
                                                                p => p._id.toString() === permission._id.toString()
                                                            );
                                                        %>
                                                            <div class="form-check form-check-inline mb-3">
                                                                <input class="form-check-input" 
                                                                       type="checkbox" 
                                                                       id="perm-<%= permission._id %>" 
                                                                       name="permissions" 
                                                                       value="<%= permission._id %>"
                                                                       <%= isChecked ? 'checked' : '' %>>
                                                                <label class="form-check-label" for="perm-<%= permission._id %>">
                                                                    <%= permission.title %>
                                                                </label>
                                                            </div>
                                                        <% }); %>
                                                    </div>
                                                </div>
                                            </div>
                                            <div class="mt-4">
                                                <button type="submit" class="btn btn-gradient">Save Changes</button>
                                            </div>
                                        </form>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>

                    <%- include('../../../../partials/footer') %>
                    <div class="content-backdrop fade"></div>
                </div>
            </div>
        </div>
        <div class="layout-overlay layout-menu-toggle"></div>
    </div>

    <script>
        $(document).ready(function () {
            // Handle form submission
            $('#adminRolesForm').submit(async function(e) {
                e.preventDefault();
                
                const form = $(this);
                const submitButton = form.find('button[type="submit"]');
                const originalText = submitButton.html();
                
                try {
                    submitButton.prop('disabled', true).html('<span class="spinner-border spinner-border-sm" role="status" aria-hidden="true"></span> Saving...');
                    
                    const response = await $.ajax({
                        url: `/admin-permissions/${form.find('input[name="role"]').val()}`,
                        method: 'PUT',
                        data: form.serialize(),
                        dataType: 'json'
                    });
                    
                    // Show success message and redirect
                    Swal.fire({
                        icon: 'success',
                        title: 'Success!',
                        text: response.message || 'Permissions updated successfully',
                        timer: 2000,
                        showConfirmButton: false
                    }).then(() => {
                        // window.location.href = '/admin-roles';
                        window.location.reload();
                    });
                    
                } catch (error) {
                    Swal.fire({
                        icon: 'error',
                        title: 'Error',
                        text: error.responseJSON?.message || 'Something went wrong. Please try again.'
                    });
                } finally {
                    submitButton.prop('disabled', false).html(originalText);
                }
            });
        });
    </script>

    <style>
        .permissions-container {
            display: flex;
            flex-wrap: wrap;
            gap: 15px;
        }
        .form-check-inline {
            margin-right: 0;
            min-width: 200px;
        }
    </style>
</body>