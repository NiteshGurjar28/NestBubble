<body>
    <div class="layout-wrapper layout-content-navbar">
        <div class="layout-container">
            <%- include('../../../../partials/sideBar') %>
            <div class="layout-page">
                <%- include('../../../../partials/header') %>
                <div class="content-wrapper">
                    <div class="admin-container">
                        <div class="admin-header">
                            <h2>Pages</h2>
                        </div>

                        <div class="row g-4 mb-4">
                            <div class="col-md-12 col-lg-12">
                                <div class="card">
                                     <div class="card-body">
                                        <div class="table-responsive">
                                        <table class="table table-hover">
                                            <thead>
                                            <tr>
                                                <th>S.No</th>
                                                <th>Page</th>
                                                <!-- <th>Status</th> -->
                                                <th>Last Updated</th>
                                                <th>Actions</th>
                                            </tr>
                                            </thead>
                                            <tbody>
                                            <% pages.forEach((page, loopIndex) => { %>
                                                <tr>
                                                <td><%= loopIndex+1 %></td>
                                                <td><%= page.pageType.toUpperCase() %></td>
                                                <!-- <td>
                                                    <span class="badge bg-<%= page.isActive ? 'success' : 'danger' %>">
                                                    <%= page.isActive ? 'Active' : 'Inactive' %>
                                                    </span>
                                                </td> -->
                                                <td><%= formatDate(page.updatedAt) %></td>
                                                <td>
                                                    <a href="/pages/<%= page.pageType %>" class="btn btn-sm btn-icon btn-outline-primary ms-1"><i class="bx bx-edit"></i> </a>
                                                </td>
                                                </tr>
                                            <% }); %>
                                            </tbody>
                                        </table>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>

                    <%- include('../../../../partials/footer') %>
                    <div class="content-backdrop fade"></div>
                </div>
            </div>
        </div>
        <div class="layout-overlay layout-menu-toggle"></div>
    </div>
</body> 


